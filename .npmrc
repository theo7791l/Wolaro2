# Python configuration for node-gyp
python=python3

# Legacy peer dependencies (avoid npm 7+ strict errors)
legacy-peer-deps=false

# Optional dependencies handling
optional=true

# Prefer offline for faster installs
prefer-offline=true

# Save exact versions
save-exact=false

# Engine strict
engine-strict=true

# Progress during install
progress=true

# Audit level
audit-level=moderate
