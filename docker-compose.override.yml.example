# docker-compose.override.yml.example
# Copy this file to docker-compose.override.yml for development mode
# Usage: cp docker-compose.override.yml.example docker-compose.override.yml

version: '3.8'

services:
  bot:
    # Override command for development with hot-reload
    command: npm run dev
    
    # Mount source code for live editing
    volumes:
      - ./src:/app/src:ro
      - ./logs:/app/logs
    
    # Override environment for development
    environment:
      NODE_ENV: development
      LOG_LEVEL: debug
    
    # Keep container running even if it crashes
    restart: "no"
