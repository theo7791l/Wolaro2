{
  "name": "wolaro",
  "version": "1.0.0",
  "description": "Advanced Discord bot with multi-tenant architecture, AI, RPG, tickets, and giveaways",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:cluster": "node dist/cluster.js",
    "update": "bash scripts/update.sh",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop wolaro",
    "pm2:restart": "pm2 restart wolaro",
    "pm2:logs": "pm2 logs wolaro",
    "pm2:monit": "pm2 monit",
    "pm2:delete": "pm2 delete wolaro",
    "docker:build": "docker build -t wolaro:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f bot",
    "docker:restart": "docker-compose restart bot",
    "migrate": "bash scripts/migrate.sh",
    "setup": "bash scripts/setup.sh",
    "backup": "bash scripts/backup.sh",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "discord",
    "bot",
    "multi-tenant",
    "ai",
    "gemini",
    "rpg",
    "moderation",
    "economy",
    "tickets",
    "giveaways"
  ],
  "author": "theo7791l",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "@discordjs/voice": "^0.17.0",
    "@google/generative-ai": "^0.21.0",
    "@napi-rs/canvas": "^0.1.53",
    "@distube/ytdl-core": "^4.14.4",
    "ffmpeg-static": "^5.2.0",
    "opusscript": "^0.1.1",
    "spotify-web-api-node": "^5.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/pg": "^8.10.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "@types/spotify-web-api-node": "^5.0.11",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
