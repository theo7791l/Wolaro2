# ==============================================
# WOLARO BOT CONFIGURATION
# ==============================================

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wolaro
DB_USER=wolaro
DB_PASSWORD=your_secure_password_here
DB_MAX_CONNECTIONS=20

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# API CONFIGURATION (wolaro.fr)
# ==============================================
API_PORT=3000
API_HOST=0.0.0.0
API_JWT_SECRET=your_jwt_secret_min_32_characters_required
API_CORS_ORIGIN=https://wolaro.fr,https://www.wolaro.fr,http://localhost:3001

# Panel Configuration
PANEL_URL=https://wolaro.fr/panel
PANEL_SESSION_DURATION=604800
# Session duration in seconds (default: 7 days)

# WebSocket Configuration
WS_PORT=3001
WS_ENABLED=true

# ==============================================
# MASTER ADMIN CONFIGURATION
# ==============================================
# Comma-separated list of Discord user IDs
MASTER_ADMIN_IDS=123456789012345678,987654321098765432

# ==============================================
# AI MODULE (Google Gemini)
# ==============================================
GEMINI_API_KEY=your_gemini_api_key_here
FEATURE_AI_ENABLED=true

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_MUSIC_ENABLED=true
FEATURE_RPG_ENABLED=true
FEATURE_TICKETS_ENABLED=true
FEATURE_GIVEAWAYS_ENABLED=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
ENCRYPTION_KEY=your_32_character_encryption_key_here_minimum
IP_WHITELIST=127.0.0.1,::1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
# Window in milliseconds (default: 60 seconds)
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window

# ==============================================
# CLUSTER CONFIGURATION
# ==============================================
CLUSTER_ENABLED=false
CLUSTER_SHARD_COUNT=auto
# Set to 'auto' or specific number

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
# Levels: error, warn, info, debug
LOG_FILE_ENABLED=true
LOG_DIR=./logs

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV=production
# Values: development, production

# ==============================================
# EXTERNAL SERVICES (Optional)
# ==============================================

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_ID=

# ==============================================
# DOMAIN CONFIGURATION
# ==============================================
MAIN_DOMAIN=wolaro.fr
API_DOMAIN=api.wolaro.fr
# If using subdomain for API, otherwise uses main domain

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/wolaro.fr/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/wolaro.fr/privkey.pem

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
# Cron format: daily at 2 AM
BACKUP_RETENTION_DAYS=7
# Keep backups for 7 days
