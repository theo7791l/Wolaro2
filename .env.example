# ========================================
# Wolaro Configuration
# ========================================

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wolaro
DB_USER=wolaro
DB_PASSWORD=change_this_password
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration
API_PORT=3000
API_JWT_SECRET=change_this_to_a_very_long_random_string_min_32_chars
API_CORS_ORIGIN=http://localhost:3001,https://panel.wolaro.com

# WebSocket Configuration
WS_PORT=3001

# Master Admin Configuration
# Add Discord user IDs separated by commas
MASTER_ADMIN_IDS=123456789012345678,987654321098765432

# Security Configuration
ENCRYPTION_KEY=change_this_32_char_encryption_key_here
IP_WHITELIST=127.0.0.1,::1

# Cluster Configuration
CLUSTER_ENABLED=false
CLUSTER_SHARD_COUNT=auto

# Node Environment
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_MUSIC_ENABLED=true
FEATURE_AI_ENABLED=false
FEATURE_RPG_ENABLED=false

# External APIs (Optional)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
YOUTUBE_API_KEY=
OPENAI_API_KEY=

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Email (Optional for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@wolaro.com
